            <Label x:Name="nameEnHashLbl" Content="" BorderThickness="1" BorderBrush="Black"  HorizontalAlignment="Left" Margin="294,413,0,0" VerticalAlignment="Top" Width="188" RenderTransformOrigin="0.537,2.212"/>
