                <HamburgerMenu:HamburgerMenuItem Icon="home.jpg" Text="Home" SelectionCommand="{Binding ElementName=this_}"/>
                <HamburgerMenu:HamburgerMenuItem Icon="steganographie.jpg" Text="Steganografie"/>
                <HamburgerMenu:HamburgerMenuItem Icon="settings.png" Text="Settings"/>
                <HamburgerMenu:HamburgerMenuItem Icon="help.png" Text="Help"/>
                <HamburgerMenu:HamburgerMenuItem Icon="exit.png" Text="Exit"/>
            </HamburgerMenu:HamburgerMenu>
