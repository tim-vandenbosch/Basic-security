            <CheckBox x:Name="checkBox2" Content="" IsEnabled="False" HorizontalAlignment="Left" Margin="491,104,0,0" VerticalAlignment="Top" Width="24" Checked="checkBox_Checked"/>
            <CheckBox x:Name="checkBox3" Content="" IsEnabled="False" HorizontalAlignment="Left" Margin="491,166,0,0" VerticalAlignment="Top" Width="24" Checked="checkBox_Checked"/>
            <CheckBox x:Name="checkBox4" Content="" IsEnabled="False" HorizontalAlignment="Left" Margin="491,231,0,0" VerticalAlignment="Top" Width="24" Checked="checkBox_Checked"/>
